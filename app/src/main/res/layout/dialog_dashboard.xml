<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout style="@style/etStyle01">

        <EditText
            android:id="@+id/et_dialog_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout style="@style/etStyle01">

        <EditText
            android:id="@+id/et_dialog_amo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="amount"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/dialogButtonU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=" Update "
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/dialogButtonD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Delete "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/dialogButtonC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Cancel "
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</LinearLayout>